@page "{taskId:int}"
@model FrontEndRazor.Pages.GroupTasks.ViewTaskModel
@{
    ViewData["Title"] = "View Task";
}

<!-- Main Container -->
<div class="container mt-5">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="display-4 text-primary">@ViewData["Title"]</h1>
        </div>
    </div>

    <!-- Error Message -->
    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @Model.Message
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Task Details Card -->
    <div class="row mb-4">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="text-secondary">Task Details</h3>
                    <h5 class="card-title">@Model.GroupTaskDTO.TaskName</h5>
                    <p class="card-text"><strong>Description:</strong> @Model.GroupTaskDTO.TaskDescription</p>
                    <p class="card-text"><strong>Created At:</strong> @Model.GroupTaskDTO.CreatedAt.ToString("g")</p>
                    <p class="card-text"><strong>Dependency Task:</strong> @Model.GroupTaskDTO.DependancyTaskName</p>
                    <p class="card-text"><strong>Group:</strong> @Model.GroupTaskDTO.GroupName</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="row">
        <div class="col-12 text-end">
            <a asp-page="/GroupTasks/UpdateTask" asp-route-taskId="@Model.GroupTaskDTO.Id" asp-route-groupId="@Model.GroupID" class="btn btn-warning btn-lg me-2">
                <i class="bi bi-pencil-square"></i> Edit Task
            </a>
            <a asp-page="/GroupTasks/GroupTasks" asp-route-groupId="@Model.GroupID" class="btn btn-primary btn-lg">
                <i class="bi bi-arrow-left"></i> Back to Group Tasks
            </a>
        </div>
    </div>
</div>

<!-- Scripts Section for Bootstrap and Icons -->
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
}
