@page "{templateId:int}/{tempName}"
@model FrontEndRazor.Pages.TemplateGroups.CreateTemplateGroupModel
@{
    ViewData["Title"] = "Add New Group";
}

<!-- Main Container -->
<div class="container mt-5">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="display-4 text-success">@ViewData["Title"]</h1>
            <p class="lead text-muted">Add a new group to the template: <strong>@Model.TemplateName</strong></p>
        </div>
    </div>

    <!-- Error Message -->
    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @Model.Message
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Form Card -->
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form method="post" class="needs-validation" novalidate>
                        <div class="mb-3">
                            <label for="GroupName" class="form-label fw-bold">Group Name</label>
                            <input type="text" class="form-control" id="GroupName" asp-for="AddTemplateGroupDTO.GroupName" placeholder="Enter group name" required />
                            <span asp-validation-for="AddTemplateGroupDTO.GroupName" class="text-danger"></span>
                            <div class="invalid-feedback">
                                Group name is required.
                            </div>
                        </div>

                        <!-- Hidden fields for IDs -->
                        <input type="hidden" asp-for="AddTemplateGroupDTO.TemplateID" />
                        <input type="hidden" asp-for="TemplateId" />
                        <input type="hidden" asp-for="TemplateName" />

                        <!-- Buttons -->
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary me-2">
                                <i class="bi bi-plus-circle"></i> Add Group
                            </button>
                            <a asp-page="/TemplateGroups/TemplateGroups"
                               asp-route-id="@Model.TemplateId"
                               asp-route-tempName="@Model.TemplateName"
                               class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Scripts Section for Bootstrap and Icons -->
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <script>
        (function () {
            'use strict';

            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            var forms = document.querySelectorAll('.needs-validation');

            // Loop over them and prevent submission
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
}
