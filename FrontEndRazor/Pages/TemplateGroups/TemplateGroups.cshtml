@page "{id:int}/{tempName}"
@model FrontEndRazor.Pages.TemplateGroups.TemplateGroupsModel
@{
    ViewData["Title"] = "Template Groups";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-12 text-center">
            <h1 class="display-4 text-primary">@ViewData["Title"]</h1>
            <p class="lead text-secondary">Manage template groups for: <strong>@Model.TemplateName</strong></p>
        </div>
    </div>

    <!-- Error message display -->
    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @Model.Message
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Create New Group Button -->
    <div class="row mb-4">
        <div class="col-12 text-end">
            <a asp-page="/TemplateGroups/CreateTemplateGroup" asp-route-templateId="@Model.TemplateID" asp-route-tempName="@Model.TemplateName" class="btn btn-primary btn-lg">
                <i class="bi bi-plus-circle"></i> Create Group
            </a>
        </div>
    </div>

    @if (Model.TemplateGroups != null && Model.TemplateGroups.Any())
    {
        <!-- Table of Groups -->
        <div class="row">
            <div class="col-12">
                <div class="table-responsive">
                    <table class="table table-hover table-bordered align-middle">
                        <thead class="table-light">
                            <tr>
                                <th scope="col">Group Name</th>
                                <th scope="col">Created At</th>
                                <th scope="col" class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var group in Model.TemplateGroups)
                            {
                                <tr>
                                    <td>@group.GroupName</td>
                                    <td>@group.CreatedAt.ToString("g")</td>
                                    <td class="text-center">
                                        <a asp-page="/GroupTasks/GroupTasks" asp-route-groupId="@group.Id" asp-route-tempName="@Model.TemplateName" class="btn btn-info btn-sm me-2">
                                            <i class="bi bi-eye"></i> View
                                        </a>
                                        <a asp-page="/TemplateGroups/UpdateGroup" asp-route-id="@group.Id" asp-route-templateId="@Model.TemplateID" asp-route-tempName="@Model.TemplateName" class="btn btn-warning btn-sm me-2">
                                            <i class="bi bi-pencil-square"></i> Update
                                        </a>
                                        <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal" onclick="setDeleteGroupId(@group.Id)">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <p>No groups available for this template.</p>
    }
</div>

<!-- Delete confirmation modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this group?
            </div>
            <div class="modal-footer">
                <form method="post" asp-page-handler="Delete" id="deleteForm">
                    <!-- Hidden fields for TemplateID and TemplateName -->
                    <input type="hidden" asp-for="TemplateID" value="@Model.TemplateID" />
                    <input type="hidden" asp-for="TemplateName" value="@Model.TemplateName" />

                    <!-- Hidden field for the group ID being deleted -->
                    <input type="hidden" id="groupId" name="id" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function setDeleteGroupId(id) {
            document.getElementById('groupId').value = id;
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
}
