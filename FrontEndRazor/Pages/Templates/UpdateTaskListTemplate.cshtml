@page "{id:int}"
@model FrontEndRazor.Pages.Templates.UpdateTaskListTemplateModel
@{
    ViewData["Title"] = "Update Task List Template";
}

<!-- Main Container -->
<div class="container mt-5">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="display-4 text-warning">@ViewData["Title"]</h1>
            <p class="lead text-muted">Modify the template details below</p>
        </div>
    </div>

    <!-- Error message display -->
    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @Model.Message
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Form Card -->
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm">
                <div class="card-body">
                    <!-- Update Template Form -->
                    <form method="post" class="needs-validation" novalidate>
                        <input type="hidden" asp-for="UpdateTaskListTemplateDTO.Id" />

                        <div class="mb-3">
                            <label for="TempName" class="form-label fw-bold">Template Name</label>
                            <input type="text" class="form-control" id="TempName" asp-for="UpdateTaskListTemplateDTO.TempName" placeholder="Enter template name" required />
                            <div class="invalid-feedback">Template name is required.</div>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary me-2">
                                <i class="bi bi-save"></i> Update Template
                            </button>
                            <a asp-page="./TaskListTemplate" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Scripts Section for Bootstrap and Icons -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <script>
        // Bootstrap form validation
        (function () {
            'use strict';
            window.addEventListener('load', function () {
                var forms = document.getElementsByClassName('needs-validation');
                Array.prototype.filter.call(forms, function (form) {
                    form.addEventListener('submit', function (event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
}
