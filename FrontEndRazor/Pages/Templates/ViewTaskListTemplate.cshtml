@page "{id:int}"
@model FrontEndRazor.Pages.Templates.ViewTaskListTemplateModel
@{
    ViewData["Title"] = "View Task List Template";
}

<!-- Container for page content -->
<div class="container mt-5">
    <!-- Page Title -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="display-4 text-primary">@ViewData["Title"]</h1>
            <p class="lead text-muted">Details of the selected task list template</p>
        </div>
    </div>

    <!-- Alert for any messages (errors) -->
    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @Model.Message
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Template Details Form -->
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-body">
                    <div class="mb-3">
                        <label for="TempName" class="form-label fw-bold">Template Name</label>
                        <input type="text" class="form-control" id="TempName" value="@Model.TaskListTemplateDTO.TempName" disabled>
                    </div>
                    <div class="mb-3">
                        <label for="CreatedAt" class="form-label fw-bold">Created At</label>
                        <input type="text" class="form-control" id="CreatedAt" value="@Model.TaskListTemplateDTO.CreatedAt.ToString("g")" disabled>
                    </div>
                    <div class="d-flex justify-content-end">
                        <a asp-page="./TaskListTemplate" class="btn btn-secondary">
                            <i class="bi bi-arrow-left-circle"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Icons and Script -->
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
}
